@using Microsoft.AspNetCore.Identity
@using Entities.Models;

@inject SignInManager<ApplicationUser> singInManager
@inject UserManager<ApplicationUser> userManager

<ul class="navbar-nav">
    @if (singInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" href="#">Hello  @userManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logout" method="post" class="form-inline" asp-controller="Account" asp-action="LogOff">
                <button type="submit" class="btn-primary nav-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
